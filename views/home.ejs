<html>
    <head>
        <title>
            <%= locals.title %>

                
            
        </title>
        <script src="https://kit.fontawesome.com/471e90c1fc.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
        <body>
            <h1 id="page-heading">
                <i class="fas fa-address-book"></i> My Contact List</h1>
            
                
                    
                
                    <% for(let i of contact_list){%>
                        <ul>
                            
                        
                        <li class="list">
                            
                       
                            <span id="one"> <%= i.name%></span>
                    <span id="two"><%= i.phone%> </span>
                    <div class="delete-button">
                            <a href="/delete-contact/?id=<%= i._id%>">
                                <i class="fas fa-window-close"></i>
                            </a>

                            
                        </div>
                        </li>
                    
                        
                    
                    </ul>
                        <%}%>
                        
                        
                    
                
            
            <form class="form" action="/create-contact" method="POST">
                
                <input class="form1" type="text" name="name" placeholder="Enter name" required>
            
        
                <input class="form1" type="number" name="phone" placeholder="Enter phone number" required>
            
                <button class="form2" type="submit">ADD</button>
                
                
            
            <script type="text/javascript" src="/js/home.js">
            </script>
        </input>
    </input>
</html>